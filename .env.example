################
# Application. #
################

DEBUG=false

# Overwrite environment for end users, in case they forget.
NODE_ENV=production

# Limits per query to /raw_data.
POKEMON_LIMIT_PER_QUERY=1000


##############
# Webserver. #
##############

# Webserver port.
PORT=1337

# Enable gzip compression.
ENABLE_GZIP=true


#############
# Database. #
#############

# Supports sqlite, mysql, postgres, mssql. RocketMap officially only supports
# sqlite and mysql.
DB_TYPE=mysql
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_DATABASE=db_name

# Connection pool size.
DB_POOL_MIN_SIZE=0
DB_POOL_MAX_SIZE=5

# The maximum time, in milliseconds, that a connection can be idle before
# being released.
DB_MAX_IDLE_TIME=10000

# SQLite only.
DB_FILE_PATH=pogom.db


###################
# Webserver load. #
###################

# Represents the maximum amount of time in milliseconds that the event queue
# is behind, before we consider the process "too busy".
MAX_LAG_MS=70

# The check interval for measuring event loop lag, in milliseconds.
LAG_INTERVAL_MS=500